<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/txt_ui">
        <SwitchPreferenceCompat
            app:key="@string/key_theme_mode"
            app:summaryOff="@string/txt_light_mode"
            app:summaryOn="@string/txt_dark_mode"
            app:title="@string/title_theme_mode" />
        <ListPreference
            android:defaultValue="en"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values"
            android:key="@string/key_language"
            android:title="@string/choose_language"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>